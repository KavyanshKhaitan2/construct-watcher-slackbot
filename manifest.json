{
  "display_information": {
    "name": "Construct Watcher (dev)"
  },
  "features": {
    "app_home": {
      "home_tab_enabled": false,
      "messages_tab_enabled": true,
      "messages_tab_read_only_enabled": false
    },
    "bot_user": {
      "display_name": "Construct Watcher (dev)",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/dev-construct-user-info",
        "description": "Show construct user's info!",
        "usage_hint": "<user>",
        "should_escape": true
      },
      {
        "command": "/dev-construct-time",
        "description": "Shows how much time you spent on construct!!",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": ["channels:history", "chat:write", "commands", "im:history"]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": ["message.channels", "message.im"]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
